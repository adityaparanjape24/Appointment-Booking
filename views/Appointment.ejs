        <form method="post" action="/PatientList">
            <table class="table table-hover table-dark" name="myTableID">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Contact No</th>
                        <th style="text-align: center" scope="col">Day&Date</th>
                        <th scope="col">Age</th>
                        <th scope="col">Gender</th>
                        <th style="text-align: center" scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                  <% let index = 0; %>
                <% AppointData.forEach(function(patient){ %> 
                  <% index++; %>
                    <tr>
                      <td><%= index %></td>
                      <td><%= patient.First_Name %></td>
                      <td><%= patient.Last_Name %></td>
                      <td><%= patient.Contact_No %></td>
                      <td><%= patient.DayDate %></td>
                      <td><%= patient.Age %></td>
                      <td><%= patient.Gender %></td>
                        <td>
                          <div class="text-center">
                            <a href='/updateAppoint/<%= patient._id %>' class="btn btn-warning btn rounded-pill" role="button"><i class="bi bi-pencil-square"></i> Update</a>

                            <a href="/DeleteAppoint/<%= patient._id %>" class="btn btn-danger btn rounded-pill"
                              role="button"><i class="bi bi-trash3-fill"></i> Delete</a>
                        </td>
                        </div>
                      </tr>
                      <% }); %>
                  </tbody>
            </table>
        </form>
        <form method="post" action="/bookAppoint">
            <script>
                $(document).ready(function () {
                    $("#modalbt").onClick(function () {
                        $("#modalRegisterForm").modal();
                    });
                });

            </script>
            <div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header text-center">
                            <h4 class="modal-title w-90 font-weight-bold">Appointment Details</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body mx-2">
                            <p class="text-center mb-3">Please enter Appointment details </p>
                            <div class="form-outline form-white mb-1">
                                <input type="FirstName" class="form-control"id="fname" name="fname" placeholder="First Name"
                                    required>
                            </div><br>
                            <div class="form-outline form-white mb-1">
                                <input type="LastName" class="form-control"id="lname" name="lname" placeholder="Last Name"
                                    required>
                            </div><br>
                            <div class="form-outline form-white mb-1">
                                <input type="tel" class="form-control"id="Pnumber" name="Pnumber" placeholder="Mobile No" required>
                            </div><br>
                            <div class="form-outline form-white mb-1">
                                <input type="datetime-local" class="form-control"id="DayDate" name="DayDate" placeholder="Day&Date" required>
                            </div><br>
                            <div class="form-outline form-white mb-1">
                                <input type="number" class="form-control"id="Age" name="Age" placeholder="Age" required>
                            </div><br>
                            <div class="input-group mb-3 col-auto">
                                <label class="input-group-text mr-3" for="inputGroupSelect01">Gender</label>
                                <select type="Gender" class="form-select"id="gender" name="gender"
                                    required>
                                
                                    <option selected>--select--</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button class="btn btn-success rounded-pill">Book Appointment</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <script>
